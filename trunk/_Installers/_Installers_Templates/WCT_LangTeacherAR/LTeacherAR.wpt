$=<PARDEF:LTEACHER_FG=#FFFFFF>$=<PARDSC:LTEACHER_FG=Text color>$=<PARPAR:LTEACHER_FG=LTEACH_ROOT>$=<PARTYP:LTEACHER_FG=color>
$=<PARDEF:LTEACHER_FS=[fontname]Arial[/fontname][size value="-17"/][weight value="400"/]>$=<PARDSC:LTEACHER_FS=Text font>$=<PARPAR:LTEACHER_FS=LTEACH_ROOT>$=<PARTYP:LTEACHER_FS=font>
$=<PARDEF:LTEACHER_BG=#000000>$=<PARDSC:LTEACHER_BG=Background color>$=<PARPAR:LTEACHER_BG=LTEACH_ROOT>$=<PARTYP:LTEACHER_BG=color>
$=<PARDEF:LTEACHER_OPACITY=40>$=<PARDSC:LTEACHER_OPACITY=Background opacity (percents)>$=<PARPAR:LTEACHER_OPACITY=LTEACH_ROOT>$=<PARTYP:LTEACHER_OPACITY=slider>$=<PARMIN:LTEACHER_OPACITY=0>$=<PARMAX:LTEACHER_OPACITY=100>
$=<PARDEF:LTEACHER_SHADOW=1>$=<PARDSC:LTEACHER_SHADOW=Show shadow around text>$=<PARPAR:LTEACHER_SHADOW=LTEACH_ROOT>$=<PARTYP:LTEACHER_SHADOW=bool>
$=<PARDEF:LTEACHER_SBORDER=0>$=<PARDSC:LTEACHER_SBORDER=Show border and background rectangle>$=<PARPAR:LTEACHER_SBORDER=LTEACH_ROOT>$=<PARTYP:LTEACHER_SBORDER=bool>
