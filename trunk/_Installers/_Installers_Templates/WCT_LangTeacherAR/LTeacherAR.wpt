$=<PARDEF:POS_TIP>$=<PARDSC:POS_TIP=Text size and position>$=<PARTYP:POS_TIP=tip>
$=<PARDEF:LTEACHER_SPOS>$=<PARDSC:LTEACHER_SPOS=Set position>$=<PARPAR:LTEACHER_SPOS=LTEACH_ROOT>$=<PARTYP:LTEACHER_SPOS=set_position>$=<PARACTION:LTEACHER_SPOS=OC:(1),X:(LTEACHER_XPOS),Y:(LTEACHER_YPOS),W:(LTEACHER_WIDTH),H:(LTEACHER_HEIGHT)/>
$=<PARDEF:LTEACHER_XPOS=255>$=<PARDSC:LTEACHER_XPOS=X Position (pixels)>$=<PARTYP:LTEACHER_XPOS=number>$=<PARMIN:LTEACHER_XPOS=0>$=<PARMAX:LTEACHER_XPOS=$=<SCREEN_X>>$=<PAROC:LTEACHER_XPOS=1>$=<PARPAR:LTEACHER_XPOS=LTEACHER_SPOS>
